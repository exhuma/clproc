{
  "editor.formatOnSave": true,
  "python.analysis.typeCheckingMode": "off",
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit"
  },
  "files.exclude": {
    "**/__pycache__": true
  },
  "editor.rulers": [
    80
  ],
  "[toml]": {
    "editor.formatOnSave": false
  },
  "mypy-type-checker.reportingScope": "workspace"
}
